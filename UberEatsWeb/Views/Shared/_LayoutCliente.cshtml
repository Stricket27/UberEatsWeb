<head>
    <link href="~/Content/Estilos/Navbar.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Start Bootstrap</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a> @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link active" })</a></li>
                    <li class="nav-item"><a> @Html.ActionLink("Sobre nosotros", "About", "Home", null, new { @class = "nav-link" })</a></li>
                    <li class="nav-item"><a> @Html.ActionLink("Contactos", "Contact", "Home", null, new { @class = "nav-link" })</a></li>
                    <li class="nav-item dropdown">
                        @{
                            String nombreUsuario = " Mi cuenta";
                            String correoUsuario = "";

                            if (Session["Usuario"] != null)
                            {
                                Infraestructure.Models.Usuario usuario = new Infraestructure.Models.Usuario();
                                usuario = (Infraestructure.Models.Usuario)Session["Usuario"];
                                nombreUsuario = $"{usuario.Nombre} {usuario.PrimerApellido} {usuario.SegundoApellido}";
                                correoUsuario = usuario.CorreoElectronico;
                            }
                        }
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Mi cuenta</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            @if (Session["Usuario"] != null)
                            {
                                <li><a class="dropdown-item">@correoUsuario</a></li>
                            }
                            @if (Session["Usuario"] == null)
                            {
                                <li><a class="dropdown-item" href="@Url.Action("IniciarSesionView","Usuario")">Iniciar sesión</a></li>
                            }
                            else
                            {
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="@Url.Action("CerrarSesion","Usuario")">Cerrar sesión</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>