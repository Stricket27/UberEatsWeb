                    <label class="control-label">Tipo de restaurante</label>
                    <div class="col-md-10">
                        @Html.DropDownList("selectTipoRestaurante",
                   (MultiSelectList)ViewBag.TipoRestaurante,
                   htmlAttributes: new { @class = "form-control", multiple = "multiple" })
                    </div>
                </div>*@



