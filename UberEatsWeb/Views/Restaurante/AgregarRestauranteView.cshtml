@model Infraestructure.Models.Restaurante

@{
    ViewBag.Title = "AgregarRestauranteView";
    List<SelectListItem> estadoActual = ViewBag.listaEstado;
    List<SelectListItem> tipoRestaurante = ViewBag.TipoRestaurante;

    string nombreGerente = "";
    int IDUsuario = 0;

    if (Session["Usuario"] != null)
    {
        Infraestructure.Models.Usuario usuario = new Infraestructure.Models.Usuario();
        usuario = (Infraestructure.Models.Usuario)Session["Usuario"];
        nombreGerente = $"{usuario.Nombre} {usuario.PrimerApellido} {usuario.SegundoApellido}";
        IDUsuario = usuario.ID_Usuario;
    }
}

<h2>AgregarRestauranteView</h2>

@using (Html.BeginForm("AgregarRestaurante", "Restaurante", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <form>
        <fieldset>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" hidden>
                <label class="control-label col-md-2">Nombre de la persona reservada</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ID_Usuario, new { htmlAttributes = new { @Value = IDUsuario } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Nombre del Restaurante</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Juan" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <label class="control-label col-md-2">Provincia</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Provincia, new { htmlAttributes = new { @class = "form-control", @placeholder = "Peréz" } })
                    @Html.ValidationMessageFor(model => model.Provincia, "", new { @class = "text-danger" })
                </div>

                <label class="control-label col-md-2">Canton</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Canton, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pereira" } })
                    @Html.ValidationMessageFor(model => model.Canton, "", new { @class = "text-danger" })
                </div>

                <label class="control-label col-md-2">Distrito</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Distrito, new { htmlAttributes = new { @class = "form-control", @placeholder = "JuanPP@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.Distrito, "", new { @class = "text-danger" })
                </div>

                <label class="control-label col-md-2">Direccion Exacta</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DireccionExacta, new { htmlAttributes = new { @class = "form-control", @placeholder = "JuanPP@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.DireccionExacta, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Tipo de restaurante</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ID_TipoRestaurante", tipoRestaurante, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_TipoRestaurante, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Asignar imagen</label>
                    <div class="col-md-10">
                        <input type="file" name="File" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Tipo de usuario</label>
                    <div class="col-md-10">
                        @Html.DropDownList("EstadoActual", estadoActual, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EstadoActual, "", new { @class = "text-danger" })
                    </div>
                </div>




                <input type="submit" value="Crear Restaurante" class="btn btn-primary" />
            </div>
        </fieldset>
    </form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
    <script type="text/javascript">
    </script>

}
