@model Infraestructure.Models.Producto

@{
    ViewBag.Title = "AgregarProductoView";
    List<SelectListItem> estadoActual = ViewBag.ListaEstado;
    List<SelectListItem> restaurante = ViewBag.Restaurante;
    List<SelectListItem> tipoProducto = ViewBag.TipoProducto;
}
<link href="~/Content/Estilos/Agregar-Editar.css" rel="stylesheet" />
<h1 style="text-align: center">Agregar nuevo producto</h1>

@using (Html.BeginForm("AgregarProducto", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <main class="form-signin w-100 m-auto">
        <form>

            <div class="form-floating mb-3">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @id = "floatingInput", @placeholder = "name@example.com" } })
                <label for="floatingInput">Descripción del producto</label>
            </div>

            <div class="form-floating mb-3">
                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", @id = "floatingInput", @placeholder = "name@example.com" } })
                <label for="floatingInput">Precio</label>
            </div>

            <div class="form-group mb-3">
                <div class="col-md-13">
                    @Html.DropDownList("ID_Producto", (IEnumerable<SelectListItem>)tipoProducto, "Seleccione el tipo de producto", htmlAttributes: new { @class = "form-control", @id = "floatingInput" })
                    @Html.ValidationMessageFor(model => model.ID_Producto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="col-md-13">
                    @Html.DropDownList("ID_Restaurante", (IEnumerable<SelectListItem>)restaurante, "Seleccione el restaurante perteneciente", htmlAttributes: new { @class = "form-control", @id = "floatingInput" })
                    @Html.ValidationMessageFor(model => model.ID_Restaurante, "", new { @class = "text-danger" })
                </div>
            </div>

            <label class="control-label">Asignar producto</label>
            <div class="form-floating mb-3">

                <div class="col-md-13">
                    <input type="file" name="File" class="form-control" placeholder="Asignar logo" />
                </div>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Crear Producto</button>

        </form>
    </main>
