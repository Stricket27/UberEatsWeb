@model Infraestructure.Models.Producto

@{
    ViewBag.Title = "AgregarProductoView";
    List<SelectListItem> estadoActual = ViewBag.ListaEstado;
    List<SelectListItem> restaurante = ViewBag.Restaurante;
    List<SelectListItem> tipoProducto = ViewBag.TipoProducto;
}

<h2>AgregarProductoView</h2>

@using (Html.BeginForm("AgregarProducto", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <form>
        <fieldset>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Descripcion del producto</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Juan" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>

                <label class="control-label col-md-2">Precio</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", @placeholder = "Peréz" } })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Restaurante</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ID_Restaurante", restaurante, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_Restaurante, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-2">Tipo de restaurante</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ID_TipoProducto", tipoProducto, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_TipoProducto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Tipo de restaurante</label>
                    <div class="col-md-10">
                        @Html.DropDownList("EstadoActual", estadoActual, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EstadoActual, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Asignar imagen</label>
                    <div class="col-md-10">
                        <input type="file" name="File" class="form-control" />
                    </div>
                </div>

                <input type="submit" value="Crear Producto" class="btn btn-primary" />
            </div>
        </fieldset>
    </form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
    <script type="text/javascript">
    </script>

}
